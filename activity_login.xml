<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andre.tfg_securitycams.LoginActivity">

    <EditText
        android:id="@+id/lbEmail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-MAIL"
        android:inputType="textEmailAddress"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/lbPassword"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:layout_below="@+id/lbEmail"
        android:layout_alignLeft="@+id/lbEmail"
        android:layout_alignStart="@+id/lbEmail"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:layout_alignBaseline="@+id/btnEntrar"
        android:layout_alignBottom="@+id/btnEntrar"
        android:layout_alignLeft="@+id/lbPassword"
        android:layout_alignStart="@+id/lbPassword"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp" />

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_below="@+id/lbPassword"
        android:layout_alignRight="@+id/lbPassword"
        android:layout_alignEnd="@+id/lbPassword"
        android:layout_marginTop="22dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/camaraweb"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
